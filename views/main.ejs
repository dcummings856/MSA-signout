<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MSA/Key Signout</title>
  <link rel="stylesheet" type="text/css" href="style/style.css">
</head>
<body>
  <h1>MSA/Key Signout</h1>
  
  <form action="/add" method="POST">
    <input type="text" id="name" name="name" placeholder="Name">

    <input type="text" id="msa" name="msa" placeholder="MSA#">

    <input type="text" id="key" name="key" placeholder="Key">

    <button type="submit">Enter</button>
  </form>

  <div id="signout-div">
    <ul>
      <% signouts.forEach(signout => { %>
        <li class='<%= signout.complete == true ? 'completed' : 'not'%>'>

          <form id="checkin-form" action="/checkin/<%= signout.id %>?_method=PUT" method="POST">
            <button type="submit">Check In</button>
          </form>

          <span id="signout-name"><%- signout.name %></span> 
          <span id="signout-msa"><%- signout.msa %></span> 
          <span id="signout-key"><%- signout.key %></span> 
          <span id="signout-createdAt"><%- signout.createdAt %></span>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>